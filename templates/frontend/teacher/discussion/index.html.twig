{% extends layout_teacher %}
{% block title %}Espace enseignant{% endblock %}
{% block content %}
<div class="main-container">
    <!-- hidden Title H1 -->
    <h1 class="hide">Espace enseignant</h1>

    <!-- big slider banner espace Enseignant -->
    <section class="banner banner-espaceEtudiant banner-espaceEnseignant">
        <div class="banner-container">
            <div class="container">
                <div class="row">
                    <figure class="col-12 bigImg-back">
                        <img src="{{ asset('/assets/images/data/banner-authentication.png') }}" alt="Espace Ã©tudiant" width="100%">
                    </figure>
                </div>
            </div>    
            <div class="desc">
                <div class="container">
                    <h2 class="main-title">Espace enseignant</h2>
                </div>
            </div>
        </div>
    </section> <!-- /Big slider --> 
    
    <!-- breadcrumb -->
    <nav aria-label="breadcrumb" class="breadcrumb-bloc container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="iconucm-home"></i></a></li>
            <li class="breadcrumb-item active" aria-current="page"><span>Espace enseignant</span></li>
        </ol>
    </nav><!-- /breadcrumb -->

    <div class="main-contentPage spaceTeacher-container">
        <div class="container container_row">
            <!-- aside Left -->
            <aside class="asideLeft asideSticky">
                {{ include('frontend/teacher/_menu.html.twig') }}
            </aside> <!-- /aside Left -->

            <!-- main Bloc -->
            <article class="mainBloc mainBloc-etudiants mainBloc-enseignants" id="mainBloc">
                <!-- content enseignant -->
                <section class="enseignant-content">        
                    <div class="form-bloc filter-bloc">
                        <div class="groups-btn justify-content-end my-1">
                            <a href="{{ path('frontend_discussion_new') }}" class="btn btn-primary" id="btn-submit-edt-form">AJOUTER</a>
                        </div>
                    </div> <!-- /filter block -->            
                    {% if data | length > 0 %}
                        {% for disc in data %}
                           <div class="card my-1">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 bg-primary text-light py-2">{{ disc.titre }}</div>
                                        <div class="col-12">{{ disc.description }}</div>
                                        <div class="col-12 text-small text-right">Auteur: {{ disc.auteur.firstName }} {{ disc.auteur.lastName }}
                                        </div>
                                        <div class="col-12 text-right">
                                            <a class="btn btn-secondary" href="{{ path('frontend_discussion_comment_index', {id: disc.id}) }}">Commenter</a>
                                        </div>
                                    </div>
                                </div>                       
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="col-12">
                            <p class="alert alert-secondary text-center m-0" role="alert"><strong>Aucune information</strong></p>
                        </div>
                    {% endif %}
                    <div class="container">
                        <div class="row mt-1">
                            <div class="col-md-12 d-flex justify-content-center align-items-center">
                                <div class="text-center">
                                <div class="pagination">
                                    {{ knp_pagination_render(data) }}
                                </div> </br>
                            </div>
                        </div>
                    </div>
                </section>
            </article> <!-- /main Bloc -->
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        (function ($) {
            $(document).ready(function () {

            });

        })(jQuery);
    </script>
{% endblock %}