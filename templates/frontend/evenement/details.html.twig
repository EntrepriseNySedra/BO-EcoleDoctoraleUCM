{% extends layout_frontend %}
{% block title %}{{evenement.title}} | UCM{% endblock %}
{% block content %}
<div class="main-container">
    <!-- hidden Title H1 -->
    <h1 class="hide">Détails Evénement</h1>

    <!-- breadcrumb -->
    <nav aria-label="breadcrumb" class="breadcrumb-bloc container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="iconucm-home"></i></a></li>
            <li class="breadcrumb-item" aria-current="page"><a href="/evenement" title="campus list">Evénements</a></li>
            <li class="breadcrumb-item active" aria-current="page"><span>{{evenement.title}}</span></li>
        </ol>
    </nav><!-- /breadcrumb -->
    
    <div class="main-contentPage actus-container">
        <div class="container">
            <!-- aside Right -->
            <aside class="asideRight asideSticky">
                <!-- aside Right actuality-->
                {{ include('frontend/layoutactus/_actus.html.twig') }}
            </aside>
            <!-- /aside Right -->

            <!-- main Bloc -->
            <article class="mainBloc mainBloc-training" id="mainBloc">
                <!-- main content training -->
                <section class="trainingDetail-bloc">
                    <div class="main-bloc">
                        <div class="top-titre">
                            <div class="title-group">
                                <p class="sup-title">Evénement</p>
                                <h2 class="title-bloc">{{evenement.title}}</h2>
                            </div>
                        </div>

                        <!-- tabs and swipe system -->
                        <section class="contentSwipe-bloc" style="color: #000">
                            <div>
                                <h4>Type: {{evenement.type}}</h4>
                                <h4>Date: {{ evenement.date | date('d.m.Y')}}</h4>
                                <h4>Lieu: {{ evenement.location}}</h4>
                                <h4>Description: {{ evenement.description}}</h4>
                            </div>
                            <main class="mdl-layout__content">
                                <p>
                                    {{ evenement.details | raw}}
                                </p>
                            </main>
                        </section>

                        <!-- /tabs and swipe system -->
                    </div>
                </section>
            </article> <!-- /main Bloc -->
        </div>

        <section class="offres-bloc">
            <figure class="backgroundImg">
                <img src="{{ asset('/assets/images/data/training/banner-economics-management.png') }}" alt="Training Background">
            </figure>
            <div class="content-text">
                <div class="container">
                    <h2 class="offres-title">Intéressé ?</h2>
                    <h3 class="sub-title">Alors, n'hésitez pas à nous envoyer votre dossier, à bientôt !</h3>
                    <p class="group-btns">
                        <a class="btn-primary" href="/concours/candidature" title="Candidature spontanée">Candidature spontanée</a>
                        <a class="btn-primary" href="/formation" title="Consultez nos offres">Consultez nos offres</a>
                    </p>
                </div>
            </div>
        </section>
    </div>
</div>
{% endblock %}