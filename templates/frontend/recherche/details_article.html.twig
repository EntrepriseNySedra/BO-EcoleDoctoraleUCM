{% extends layout_frontend %}
{% block title %}{{article.title}} | UCM{% endblock %}
{% block content %}
<div class="main-container">
    <!-- hidden Title H1 -->
    <h1 class="hide">Article</h1>

    <!-- breadcrumb -->
    <nav aria-label="breadcrumb" class="breadcrumb-bloc container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="iconucm-home"></i></a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="/" title="Article">Article</a></li>
            <li class="breadcrumb-item active" aria-current="page"><span>{{article.title}}</span></li>
        </ol>
    </nav><!-- breadcrumb -->
    
    <div class="main-contentPage article-container">
        <div class="container">
            <!-- aside Right -->
            <aside class="asideRight asideSticky">
                <!-- aside Right actuality-->
                {{ include('frontend/layoutactus/_actus.html.twig') }}
            </aside>
            <!-- /aside Right -->

            <!-- main Bloc -->
            <article class="mainBloc mainBloc-training" id="mainBloc">
                <!-- main content training -->
                <section class="trainingDetail-bloc">
                    <div class="main-bloc">
                        <div class="top-titre">
                            <div class="title-group">
                                <p class="sup-title">Article</p>
                                <h2 class="title-bloc">{{article.title}}</h2>
                            </div>
                        </div>
                        
                        <section class="banner banner-training">
                            <div class="banner-container">
                                <figure class="bigImg">
                                    <img style='height:50px; width:100%;' src="{{asset("uploads/article/")~ article.uuid~"/1073-"~ article.path}}">
                                </figure>
                                <div class="desc">
                                    <div class="container">
                                        <h2 class="item-title">{{ article.title }}</h2>
                                    </div>
                                </div>
                            </div>
                        </section>
                                    
                        <div class="top-titre">
                            <div class="title-group-">
                                <h2 class="title-bloc">{{article.description}}</h2>
                            </div>
                        </div>
                        
                        <div class="data_publication">
                            Publié le: {{ article.createdAt | date('d/m/Y') }}
                        </div>
                        
                        <!-- tabs and swipe system -->
                        <section class="contentSwipe-bloc">
                            <main class="mdl-layout__content">
                                <p>
                                {{article.detail|raw}}
                                </p>
                            </main>
                        </section>
                        <!-- /tabs and swipe system -->
                    </div>
                </section>
            </article> <!-- /main Bloc -->
        </div>

        <section class="offres-bloc">
            <figure class="backgroundImg">
                <img src="{{ asset('/assets/images/data/training/banner-economics-management.png') }}" alt="Training Background">
            </figure>
            <div class="content-text">
                <div class="container">
                    <h2 class="offres-title">Intéressé ?</h2>
                    <h3 class="sub-title">Alors, n'hésitez pas à nous envoyer votre dossier, à bientôt !</h3>
                    <p class="group-btns">
                        <a class="btn-primary" href="" title="Candidature spontanée">Candidature spontanée</a>
                        <a class="btn-primary" href="" title="Consultez nos offres">Consultez nos offres</a>
                    </p>
                </div>
            </div>
        </section>
    </div>
</div>
{% endblock %}
