{% extends layout_frontend %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="container center">
        <h1>Inscription</h1>

        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        {{ form_start(registrationForm, {'attr': {'class': 'row'}}) }}
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.firstName, {'attr': {'placeholder': 'Pr√©nom'}}) }}
            <span class="error">{{ form_errors(registrationForm.firstName) }}</span>
        </div>
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.lastName, {'attr': {'placeholder': 'Nom'}}) }}
            <span class="error">{{ form_errors(registrationForm.lastName) }}</span>
        </div>
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse email'}}) }}
            <span class="error">{{ form_errors(registrationForm.email) }}</span>
        </div>
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.login, {'attr': {'placeholder': 'Login'}}) }}
            <span class="error">{{ form_errors(registrationForm.login) }}</span>
        </div>
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
            <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
        </div>
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_widget(registrationForm.profil, {'attr': {'placeholder': 'Profil'}}) }}
            <span class="error">{{ form_errors(registrationForm.profil) }}</span>
        </div>
        <div class="input-field col s12">
            <input type="submit" name="" class="btn btn-primary" value="M'inscrire">
        </div>
        {{ form_end(registrationForm) }}
    </div>
    <style>
        select {
            display: block;
        }
    </style>
{% endblock %}
