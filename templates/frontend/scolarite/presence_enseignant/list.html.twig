{% extends layout_frontend %}
{% block title %}Fiche présence enseignants{% endblock %}
{% block content %}
<div class="main-container"></div>
    <!-- hidden Title H1 -->
    <h1 class="hide">Fiche de présence enseignants</h1>

    <!-- big slider banner scollarité -->
    <section class="banner banner-scolarite">
        <div class="banner-container">
            <div class="container">
                <div class="row">
                    <figure class="col-12 bigImg-back">
                        <img src="{{ asset('/assets/images/data/banner-authentication.png') }}" alt="Espace étudiant" width="100%">
                    </figure>
                </div>
            </div>
            <div class="desc">
                <div class="container">
                    <h2 class="main-title">Espace Scolarité</h2>
                </div>
            </div>
        </div>
    </section><!-- /Big slider -->

    <!-- breadcrumb -->
    <nav aria-label="breadcrumb" class="breadcrumb-bloc container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="iconucm-home"></i></a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href="" title="Espace scolarité">Espace scolarité</a></li>
            <li class="breadcrumb-item active" aria-current="page"><span>Fiche de présence enseignants</span></li>
        </ol>
    </nav><!-- /breadcrumb -->

    <div class="main-contentPage spaceScolarity-container">
        <div class="container container_row">
            <!-- aside Left -->
            <aside class="asideLeft asideSticky">
                {{ include('frontend/scolarite/_menu.html.twig') }}
            </aside><!-- /aside Left -->
           
            <!-- main Bloc -->
            <article class="mainBloc mainBloc-etudiants mainBloc-scolarity" id="mainBloc">
                <div class="title-group">
                    <p class="sup-title">Scolarité</p>
                    <h2 class="title-bloc">Fiche de présence enseignants</h2>
                </div>
                <!-- content  -->
                <section class="presenceEnseignant-content content richText">
                    <div class="groups-btn text-right m-b-20">
                        <a href="{{ path('front_scolarite_presence_enseignant_add') }}" class="btn btn-primary" id="btn-submit-product-form" >Ajouter une fiche</a>
                    </div>
                    {% if fPresenceEnseignants is defined and fPresenceEnseignants | length > 0 %}
                        <div class="table-responsive table-wrapper">
                            <table class="table table-bordered table-hover list-data">
                                <thead>
                                    <tr>
                                        <th>Domaine</th>
                                        <th>Mention</th>
                                        <th>Niveau</th>
                                        <th>Parcours</th>
                                        <th>UE</th>
                                        <th>EC</th>
                                        <th>Enseignant</th>
                                        <th>Date</th>
                                        <th>Heure de début </th>
                                        <th>Heure de fin </th>
                                        {#<th class="action_col">Actions</th>#}
                                    </tr>
                                </thead>
                                <tbody>
                                {% for presence in fPresenceEnseignants %}
                                    <tr class="middle-align">
                                        <td>{{ presence.domaine.nom }}</td>
                                        <td>{{ presence.mention.nom }}</td>
                                        <td class="text-center">{{ presence.niveau.libelle }}</td>
                                        <td>{% if presence.parcours.libelle is defined %} {{ presence.parcours.libelle }} {% endif %}</td>
                                        <td class="text-center">{{ presence.ue.libelle }}</td>
                                        <td class="text-center">{{ presence.matiere.nom }}</td>
                                        <td>{{ presence.enseignant.firstName }} {{ presence.enseignant.lastName }}</td>
                                        <td  class="text-center">{{ presence.date | format_datetime('short', 'none', locale='fr') }}</td>
                                        <td  class="text-center">{{ presence.startTime | format_time(timeFormat='short', locale='fr') }}</td>
                                        <td  class="text-center">{{ presence.endTime | format_time(timeFormat='short', locale='fr') }}</td>
                                        {#<td class="action_col">
                                            <div class="wrap-btn">
                                                <a class="btn btn-primary" href="{{ path('front_scolarite_presence_enseignant_edit', { id: presence.id}) }}" title="Modifier">
                                                    <span>Modfier</span>
                                                </a>
                                            </div>
                                        </td>#}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </section>
            </article> <!-- /main Bloc -->
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        ( function( $ ) {
            $(document).ready(function () {

            });

        } )( jQuery );
    </script>
{% endblock %}

