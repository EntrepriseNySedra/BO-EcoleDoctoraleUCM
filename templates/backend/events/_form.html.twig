<style>
    .form-group legend {
        font-size: 14px;
        font-weight: bold;
    }
</style>

{% set action = path('admin_events_add') %}
{% if event.id %}
    {% set action = path('admin_events_edit', { id: event.id }) %}
{% endif %}
<section class="content">
    <form id="actualite-new" method="POST" class="page-form-edit-new form-validation" enctype="multipart/form-data" role="form" action="{{action}}">
        {{ form_errors(form) }}
        {{ form_row(form._token) }}
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <h4>Classification</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <h4>Actualit√©: informations principales</h4>
                        </div>
                    </div>
                    <div class="panel-body">
                            
                        <div class="form-group">
                            {{ form_label(form.title, 'Titre *') }}
                            {{ form_widget(form.title) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.type, 'Type') }}
                            {{ form_widget(form.type) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.location, 'Lieu') }}
                            {{ form_widget(form.location) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.date, 'Date') }}
                            {{ form_widget(form.date) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.description, 'Description') }}
                            {{ form_widget(form.description) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.details, 'Detail') }}
                            {{ form_widget(form.details) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd">
                    <div class="panel-body">
                        <button type="submit" class="btn btn-primary" id="btn-submit-actualite-form">Enregistrer</button>
                    </div>
                </div>
            </div>
        </div>
        
    </form>
</section>
