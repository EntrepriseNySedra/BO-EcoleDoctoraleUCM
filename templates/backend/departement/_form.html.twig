<style>
    .form-group legend {
        font-size: 14px;
        font-weight: bold;
    }
</style>

{% set action = path('admin_rf_departement_new') %}
{% if departement.id %}
    {% set action = path('admin_rf_departement_edit', { id: departement.id }) %}
{% endif %}
<section class="content">
    <form id="departement-new" method="POST" class="page-form-edit-new form-validation" enctype="multipart/form-data" role="form" action="{{action}}">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd">
                    <div class="panel-heading">
                        <div class="panel-title">
                        {% if departement.id %}
                            <h4>Modification département</h4>
                        {% else %}
                            <h4>Nouveau département</h4>
                        {% endif %}
                        </div>
                    </div>
                    <div class="panel-body">
                         <div class="form-group">
                            {{ form_errors(formDepartement) }}
                            {{ form_row(formDepartement._token) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(formDepartement.nom, 'Nom *') }}
                            {{ form_widget(formDepartement.nom, {'attr':{'required':'required'}}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd">
                    <div class="panel-body">
                        {% if departement.id %}
                            <button type="submit" class="btn btn-primary" id="btn-submit-product-form">Modifier</button>
                        {% else %}
                            <button type="submit" class="btn btn-primary" id="btn-submit-product-form">Enregistrer</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </form>
</form>