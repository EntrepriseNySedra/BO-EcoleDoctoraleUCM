<style>
    .form-group legend {
        font-size: 14px;
        font-weight: bold;
    }
</style>

{% set action = path('admin_profil_add') %}
{% if profil.id %}
    {% set action = path('admin_profil_edit', { id: profil.id }) %}
{% endif %}
<form id="profil-new" method="POST" class="page-form-edit-new form-validation container" enctype="multipart/form-data" role="form" action="{{action}}">
    {{ form_errors(form) }}
    {{ form_row(form._token) }}
    <div class="row">
        <div class="col-12">
            <div class="panel panel-bd">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h4>Profil</h4>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        {{ form_label(form.name, 'Titre *') }}
                        {{ form_widget(form.name) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.status, 'Statut') }}
                        {{ form_widget(form.status) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.roles, 'Actions ') }}
                        {{ form_widget(form.roles) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="panel panel-bd">
                <div class="panel-body">
                    <button type="submit" class="btn btn-primary" id="btn-submit-product-form">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
</form>
