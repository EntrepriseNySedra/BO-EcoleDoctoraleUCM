<style>
    .form-group legend {
        font-size: 14px;
        font-weight: bold;
    }
</style>

{% set action = path('ArticleEcole_add') %}
{% if ArticleEcole.id %}
    {% set action = path('ArticleEcole_edit', { id: ArticleEcole.id }) %}
{% endif %}
<section class="content">
    <form id="actualite-new" method="POST" class="page-form-edit-new form-validation" enctype="multipart/form-data" role="form" action="{{action}}">
        {{ form_errors(form) }}
        {{ form_row(form._token) }}
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <h4>Ajouter des ArticleEcoles</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <h4>ArticleEcole: informations principales</h4>
                        </div>
                    </div>
                    <div class="panel-body">
                            
                        <div class="form-group">
                            {{ form_label(form.titre, 'Titre') }}
                            {{ form_widget(form.titre) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.typeArticleEcole, 'Type article') }}
                            {{ form_widget(form.typeArticleEcole) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.detail, 'Detail') }}
                            {{ form_widget(form.detail) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.description, 'Description') }}
                            {{ form_widget(form.description) }}
                        </div>


                        <div class="form-group">
                            {{ form_label(form.image, 'images') }}
                            {{ form_widget(form.image) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-bd">
                    <div class="panel-body">
                        <button type="submit" class="btn btn-primary" id="btn-submit-actualite-form">Enregistrer</button>
                    </div>
                </div>
            </div>
        </div>
        
    </form>
</section>
